<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceCreationActivity">

    <Button
        android:id="@+id/reservationButton"
        android:layout_width="161dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:background="#009688"
        android:text="reservations"
        android:textColor="#F9F9F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/complaintsButton"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="52dp"
        android:background="#009688"
        android:text="complaints"
        android:textColor="#F9F9F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservationButton" />

    <Button
        android:id="@+id/reportButton"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:background="#009688"
        android:text="Reports"
        android:textColor="#F9F9F9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/complaintsButton"
        app:layout_constraintVertical_bias="0.178" />
</android.support.constraint.ConstraintLayout>